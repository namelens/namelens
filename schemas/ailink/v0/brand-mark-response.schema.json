{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://crucible.3leaps.dev/schemas/ailink/v0/brand-mark-response",
  "title": "Brand Mark Response",
  "description": "Schema for brand mark/logo direction generation",
  "type": "object",
  "required": [
    "name",
    "marks"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name being branded"
    },
    "summary": {
      "type": "string",
      "description": "Short summary of the mark directions"
    },
    "marks": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "$ref": "#/$defs/mark"
      }
    }
  },
  "additionalProperties": true,
  "$defs": {
    "mark": {
      "type": "object",
      "required": [
        "label",
        "description",
        "image_prompt"
      ],
      "properties": {
        "label": {
          "type": "string",
          "description": "Short label for the direction (e.g. 'minimal monogram')"
        },
        "description": {
          "type": "string",
          "description": "Art direction notes"
        },
        "image_prompt": {
          "type": "string",
          "description": "The exact text prompt to send to the image model"
        }
      },
      "additionalProperties": true
    }
  }
}
