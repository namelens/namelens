{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://crucible.3leaps.dev/schemas/ailink/v0/connectivity-report",
  "title": "AILink Connectivity Report",
  "description": "Schema for `namelens doctor ailink connectivity` JSON output.",
  "type": "object",
  "required": [
    "timestamp",
    "input",
    "resolution",
    "checks",
    "summary"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "input": {
      "type": "object",
      "required": [
        "timeout_seconds",
        "output"
      ],
      "properties": {
        "prompt_slug": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "provider_id_override": {
          "type": "string"
        },
        "timeout_seconds": {
          "type": "integer",
          "minimum": 1
        },
        "output": {
          "type": "string"
        },
        "quiet": {
          "type": "boolean"
        },
        "show_secrets": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    },
    "resolution": {
      "type": "object",
      "required": [
        "provider_id",
        "resolution_source",
        "ai_provider",
        "base_url",
        "host",
        "port"
      ],
      "properties": {
        "provider_id": {
          "type": "string"
        },
        "resolution_source": {
          "type": "string"
        },
        "routing_target": {
          "type": "string"
        },
        "ai_provider": {
          "type": "string"
        },
        "base_url": {
          "type": "string"
        },
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "model": {
          "type": "string"
        },
        "model_source": {
          "type": "string"
        },
        "prompt_preferred_model": {
          "type": "string"
        },
        "provider_default_model": {
          "type": "string"
        },
        "credential": {
          "type": "object",
          "properties": {
            "selection_policy": {
              "type": "string"
            },
            "default_credential": {
              "type": "string"
            },
            "selected_label": {
              "type": "string"
            },
            "selected_priority": {
              "type": "integer"
            },
            "api_key_present": {
              "type": "boolean"
            },
            "api_key_hint": {
              "type": "string"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "environment": {
      "type": "object",
      "properties": {
        "http_proxy_set": {
          "type": "boolean"
        },
        "https_proxy_set": {
          "type": "boolean"
        },
        "no_proxy_set": {
          "type": "boolean"
        },
        "no_proxy_matches_host": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "ok": {
            "type": "boolean"
          },
          "skipped": {
            "type": "boolean"
          },
          "latency_ms": {
            "type": "integer",
            "minimum": 0
          },
          "details": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string"
              },
              "status_code": {
                "type": "integer"
              },
              "content_type": {
                "type": "string"
              },
              "body_bytes": {
                "type": "integer"
              },
              "body_text_snippet": {
                "type": "string"
              },
              "body_json_snippet": {
                "type": [
                  "object",
                  "array",
                  "string",
                  "number",
                  "boolean",
                  "null"
                ]
              },
              "body_json_truncated": {
                "type": "boolean"
              }
            },
            "additionalProperties": true
          },
          "error": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string"
              },
              "message": {
                "type": "string"
              }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    },
    "summary": {
      "type": "object",
      "required": [
        "ok"
      ],
      "properties": {
        "ok": {
          "type": "boolean"
        },
        "failure_layer": {
          "type": "string"
        },
        "classification": {
          "type": "string"
        },
        "hints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
