# EditorConfig for namelens
# https://editorconfig.org

root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.{json,md}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 4
# shfmt options: -i 4 -ci -sr
shell_variant = bash
binary_next_line = false
case_indent = true
space_redirects = true

[Makefile]
indent_style = tab
