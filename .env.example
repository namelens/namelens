# NameLens Environment Variables
# Copy this file to .env and customize for your environment
# The .env file is gitignored and will not be committed

# Application Configuration
NAMELENS_PORT=8080
NAMELENS_HOST=localhost

# Logging Configuration
NAMELENS_LOG_LEVEL=info
# Options: trace, debug, info, warn, error

# Metrics and Health
NAMELENS_METRICS_ENABLED=true
NAMELENS_METRICS_PORT=9090
NAMELENS_HEALTH_ENABLED=true

# Configuration File Path
# If not set, uses XDG config dir: ~/.config/namelens/config.yaml
# NAMELENS_CONFIG_PATH=./config/namelens.yaml

# Server Options
NAMELENS_READ_TIMEOUT=30s
NAMELENS_WRITE_TIMEOUT=30s
NAMELENS_IDLE_TIMEOUT=120s
NAMELENS_SHUTDOWN_TIMEOUT=10s

# Worker Configuration
NAMELENS_WORKERS=4

# Debug Options (never enable in production)
# NAMELENS_DEBUG=false
# NAMELENS_PPROF_ENABLED=false

# Database Configuration (libsql/Turso)
# NAMELENS_DB_DRIVER=libsql
# For local development (file-based):
# NAMELENS_DB_PATH=./namelens.db
# For Turso cloud:
# NAMELENS_DB_URL=libsql://your-db.turso.io
# NAMELENS_DB_AUTH_TOKEN=your-auth-token

# AILink Provider Configuration
#
# Providers are configured as named instances (ids are slug-like).
# Env var instance ids use underscores and are converted to hyphens.
# Example instance id: "namelens-xai" â†’ env segment: NAMELENS_XAI
#
# NAMELENS_AILINK_DEFAULT_PROVIDER=namelens-xai
# NAMELENS_AILINK_DEFAULT_TIMEOUT=60s
# NAMELENS_AILINK_CACHE_TTL=24h
# NAMELENS_AILINK_PROMPTS_DIR=/path/to/prompts
#
# Provider instance: namelens-xai
# NAMELENS_AILINK_PROVIDERS_NAMELENS_XAI_ENABLED=true
# NAMELENS_AILINK_PROVIDERS_NAMELENS_XAI_AI_PROVIDER=xai
# NAMELENS_AILINK_PROVIDERS_NAMELENS_XAI_BASE_URL=https://api.x.ai/v1
# NAMELENS_AILINK_PROVIDERS_NAMELENS_XAI_MODELS_DEFAULT=grok-4-1-fast-reasoning
# NAMELENS_AILINK_PROVIDERS_NAMELENS_XAI_CREDENTIALS_0_LABEL=default
# NAMELENS_AILINK_PROVIDERS_NAMELENS_XAI_CREDENTIALS_0_PRIORITY=0
# NAMELENS_AILINK_PROVIDERS_NAMELENS_XAI_CREDENTIALS_0_API_KEY=your-api-key
#
# Provider instance: namelens-openai
# NAMELENS_AILINK_PROVIDERS_NAMELENS_OPENAI_ENABLED=true
# NAMELENS_AILINK_PROVIDERS_NAMELENS_OPENAI_AI_PROVIDER=openai
# NAMELENS_AILINK_PROVIDERS_NAMELENS_OPENAI_BASE_URL=https://api.openai.com/v1
# NAMELENS_AILINK_PROVIDERS_NAMELENS_OPENAI_MODELS_DEFAULT=<openai-text-model>
# NAMELENS_AILINK_PROVIDERS_NAMELENS_OPENAI_MODELS_REASONING=<openai-reasoning-model>
# NAMELENS_AILINK_PROVIDERS_NAMELENS_OPENAI_MODELS_FAST=gpt-4o-mini
# NAMELENS_AILINK_PROVIDERS_NAMELENS_OPENAI_CREDENTIALS_0_LABEL=default
# NAMELENS_AILINK_PROVIDERS_NAMELENS_OPENAI_CREDENTIALS_0_PRIORITY=0
# NAMELENS_AILINK_PROVIDERS_NAMELENS_OPENAI_CREDENTIALS_0_API_KEY=your-api-key
# Optional: if multiple credentials present
# NAMELENS_AILINK_PROVIDERS_NAMELENS_XAI_SELECTION_POLICY=round_robin
# NAMELENS_AILINK_PROVIDERS_NAMELENS_XAI_DEFAULT_CREDENTIAL=default
#
# Route a prompt slug (role) to a provider instance id
# NAMELENS_AILINK_ROUTING_NAME_AVAILABILITY=namelens-xai

# Expert Feature Configuration
# NAMELENS_EXPERT_ENABLED=false
# NAMELENS_EXPERT_ROLE=name-availability
# NAMELENS_EXPERT_DEFAULT_PROMPT=name-availability

# Domain Whois Fallback Configuration
# Used when RDAP is unavailable for a TLD (e.g., .io, .sh)
# NAMELENS_DOMAIN_WHOIS_FALLBACK_ENABLED=true
# NAMELENS_DOMAIN_WHOIS_FALLBACK_REQUIRE_EXPLICIT=false
# NAMELENS_DOMAIN_WHOIS_FALLBACK_TIMEOUT=10s
# NAMELENS_DOMAIN_WHOIS_FALLBACK_CACHE_TTL=6h
# NAMELENS_DOMAIN_WHOIS_FALLBACK_TLDS=io,sh,co

# Domain DNS Fallback Configuration
# Last-resort check when both RDAP and whois unavailable
# NAMELENS_DOMAIN_DNS_FALLBACK_ENABLED=false
# NAMELENS_DOMAIN_DNS_FALLBACK_TIMEOUT=5s
# NAMELENS_DOMAIN_DNS_FALLBACK_CACHE_TTL=30m
